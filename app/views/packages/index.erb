<div class="container">
  <div class="page-header">
    <h1> Welcome, <%= @current_user.username %> </h2>
  </div>
<h2>Your packages:</h2>
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name </th>
      <th>Shipping Co.</th>
      <th>Delivery Date</th>
      <th>Status</th>
      <th>Tracking No</th>
      <th>Sender</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @current_user.packages.each do |package| %>
      <tr>
        <td><a href="/packages/<%= package.id %>"><%= package.name %></a></td>
        <td><%= package.shipping_co %></td>
        <td><%= package.delivery_date %></td>
        <td><%= package.status %></td>
        <td><a href="<%= package.tracking_url %>"><%= package.tracking_no %></a></td>
        <td><a href="/senders/<%= package.sender.id %>"><%= package.sender.name %></a></td>
        <td><a href="/packages/<%= package.id %>/edit">Edit</a></td>
        <td><form action="/packages/<%= package.id %>/delete" method="post">
          <input type="hidden" id="hidden" name="_method" value="delete">
          <input type="submit" value="Delete"> </form> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<a href="/packages/new">Add a Package</a> | <a href="/logout">Logout</a>
  </div>
