<h1>Add a Package</h1>

<form class="newPackage" action="/packages/<%= @package.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <table class="singlePack">
      <tr><th>Name</th><td><input type="text" name="package[name]" value="<%= @package.name %>"></td></tr>
      <tr><th>Shipping Co.</th><td><input type="text" name="package[shipping_co]" value="<%= @package.shipping_co %>"></td></tr>
      <tr><th>Delivery Date</th><td><input type="text" name="package[delivery_date]" value="<%= @package.delivery_date %>"></td></tr>
      <tr><th>Status</th><td><input type="text" name="package[status]" value="<%= @package.status %>"></td></tr>
      <tr><th>Tracking No</th><td><input type="text" name="package[tracking_no]" value="<%= @package.tracking_no %>"></td></tr>
      <tr><th>Sender</th><td><input type="text" name="sender[name]" value="<%= @package.sender.name %>"></td></tr>
    </table>
    <br>
    <input type="submit" value="Save">
</form>
